<h1>Edit todo</h1>

<form id="edit-todo" name="todo">
  <div class="field">
    <label for="due"> due:</label>
    <input type="text" name="due" id="due" value="<%= due %>" >
  </div>

  <div class="field">
    <label for="task"> task:</label>
    <input type="text" name="task" id="task" value="<%= task %>" >
  </div>

  <div class="actions">
    <input type="submit" value="Update Todo" />
  </div>

</form>

