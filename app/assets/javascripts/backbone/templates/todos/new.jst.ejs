<h1>New todo</h1>

<form id="new-todo" name="todo">
  <div class="field">
    <label for="due"> due:</label>
    <input data-provide="datepicker" data-date-format="yyyy-mm-dd" name="due" id="due" value="<%= due %>" >
  </div>

  <div class="field">
    <label for="task"> task:</label>
    <input type="text" name="task" id="task" value="<%= task %>" >
  </div>

  <div class="actions">
    <input type="submit" value="Create Todo" />
  </div>

</form>

